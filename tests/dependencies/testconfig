# test2 from the tests/Makefile
[setup]
submegatest #{getenv MTTESTDIR}/dep-tests

[var]
tname deptest

[ezsteps]

# Set things up
cleansimple   $MTRUNNER $MTTESTDIR/dep-tests $MTPATH megatest -remove-runs -testpatt %             -target simple/0 -runname #{get var tname}
simple        $MTRUNNER $MTTESTDIR/dep-tests $MTPATH megatest -run         -testpatt test2/%/ptran -target simple/0 -runname #{get var tname} -run-wait
simpleresults $MTRUNNER $MTTESTDIR/dep-tests $MTPATH megatest -list-runs #{get var tname}           -target simple/0

[requirements]
waiton rollup
mode toplevel
