# test2 from the tests/Makefile
[setup]
# submegatest #{getenv MTTESTDIR}/rerunclean
submegatest #{getenv MT_TEST_RUN_DIR}/rerunclean

[pre-launch-env-vars]
NUMTESTS 20

[ezsteps]

# Set things up
copy  rsync -av --exclude '*.db' #{getenv MT_RUN_AREA_HOME}/rerunclean/ ./rerunclean/
clean $MTRUNNER #{get setup submegatest} $MTPATH megatest -remove-runs -testpatt % -target  %/% -runname %
# run1  $MTRUNNER #{get setup submegatest} $MTPATH megatest -run -testpatt try_top -target std/0 -runname run1 -run-wait
# testconfig is missing for try_top, got renamed to try_rerunclean, we'll try that one
run1  $MTRUNNER #{get setup submegatest} $MTPATH megatest -run -testpatt try_rerunclean,itemdep -target std/0 -runname run1 -run-wait
res1  $MTRUNNER #{get setup submegatest} $MTPATH megatest -list-runs run1 -target std/0


[logpro]
clean ;;
  (expect:ignore in "LogFileBody" >= 0 "Ignore NFS releated issues" #/ERROR: There was a problem removing/)
  (expect:error in "LogFileBody" = 0 "No errors allowed" #/error/i)
run1 ;;
  (expect:error in "LogFileBody" = 0 "No errors allowed" #/error/i)

[include #{getenv MT_RUN_AREA_HOME}/std-items.config]

[requirements]
# waiton testpatt
priority 0

# This is a "toplevel" test, it does not require waitons to be non-FAIL to run
# mode toplevel

[test_meta]
author tyardeni
owner  tyardeni
description Test preclean/rerun behavior
tags rerunclean

