mergebranch (cd megatest;fossil up trunk;fossil merge $BRANCH_TO_TEST)
buildmt     (export PATH=$CHICKEN_PATH_BASE/$CHICKEN_VERSION/bin:$PATH;cd megatest;make -j && make install)

